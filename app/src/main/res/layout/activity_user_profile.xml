<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.test.warrantree_retailer.UserProfile">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_20"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/warrantreesamplelogo"
        android:id="@+id/imageView" />

    <EditText
        android:id="@+id/retailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/retailer_ContactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/retailer_name"
        android:layout_alignRight="@+id/retailer_name"
        android:layout_below="@+id/retailer_name"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:hint="Contact Info"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/retailer_emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/retailer_ContactNumber"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignRight="@+id/retailer_ContactNumber"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/retailer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/retailer_emailid"
        android:layout_alignEnd="@+id/retailer_emailid"
        android:layout_alignRight="@+id/retailer_emailid"
        android:layout_alignStart="@+id/retailer_emailid"
        android:layout_below="@+id/retailer_emailid"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</RelativeLayout>
